@model Weapons
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weapons Display</title>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <style>
        .container {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            margin: 50px 50px 0px 100px;
            width: 1300px;
            height: auto;
            font-size: 17px;
            background-color: #36454F;
            border: 1px solid rgb(169, 159, 159);
            box-shadow: 0 0 0 1px rgb(148, 32, 53);
            border-radius: 8px;
            margin-bottom: 50px;
            padding-bottom:     5px;
        }

        .item {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            margin-top: 10px;
            width: 200px;
            border: 1px solid #5f7786;
            width: 80%;
            padding-left: 20px;
            border-radius: 20px;
        }
        .item .title{
            min-width: 120px;
        }
        .item .value{
            float: left;
            align-content: left;
        }
        .insights-container {

            width: 30%;
            background-color: #2c373e;
            padding-left: 50px;
            height: 100%;
        }

        .images-container {
            width: 70%;
            display: flex;
            flex-direction: column;
            margin: 10px;
            padding-left: 70px;
        }
        .images{
            display: flex;
            width: 400px;
            height: auto;
        }
        .images img{
            width: 100%;
            height: 100%;
        }
    </style>
</head>

<body>
    @Html.Partial("/views/shared/homepage_nav.cshtml")
    <div class="container">
        <div class="insights-container">
            <h2>Insights</h2>
            <div class="item">
                <div class="title">
                    <p>Name: </p>
                </div>
                <div class="value">
                    <p id="name">@Model.Weapon_Name</p>
                </div>
            </div>
            <div class="item">
                <div class="title">
                    <p>Category: </p>
                </div>
                <div class="value">
                    <p id="category">@Model.Weapon_Type</p>
                </div>
            </div>
            <div class="item">
                <div class="title">
                    <p>Capacity: </p>
                </div>
                <div class="value">
                    <p id="capacity">@Model.Capacity</p>
                </div>
            </div>
            <div class="item">
                <div class="title">
                <p>Damage: </p>
                </div>
                <div class="value">
                <p id="damage">@Model.Damage</p>
                </div>
            </div>
            <div class="item">
                <div class="title">
                <p>Fire rate: </p>
                </div>
                <div class="value">
                <p id="rate">@Model.Fire_Rate</p>
                </div>
            </div>
            <div class="item">
                <div class="title">
                <p>Reload speed: </p>
                </div>
                <div class="value">
                <p id="speed">@Model.Reload_Speed</p>
                </div>
            </div>
            <div class="item">
                <div class="title">
                <p>Mode: </p>
                </div>
                <div class="value">
                <p id="mode">@Model.Fire_Mode</p>
                </div>
            </div>
            <div class="item">
                <div class="title">
                <p>Range: </p>
                </div>
                <div class="value">
                <p id="range">@Model.Max_Range</p>
                </div>
            </div>
        </div>
        
        <div class="images-container">
            <h2>Popular skins</h2>
            <div class="images">
                <img src="~/Images/vandal5.jpg" />
            </div>
            
            
        </div>
    </div>
    <script>
        
    </script>
</body>

</html>