<!Doctype html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body{
            margin: 0px;
            padding: 0px;
        }
        .navbar {
            background-color: #990000;
            display: flex;
            justify-content: space-between;
            border-radius: 8px;
            color: white;
            width: 100%;
            margin: 0px;
            padding: 0px;
        }

            .navbar p {
                margin: 25px 0px 20px 20px;
            }

        .items {
            background-color: #990000;
            width: 1100px;
            border-radius: 5px;
            margin-right: 30px;
            display: inline-block;
        }

            .items ul {
                display: flex;
                justify-content: space-between;
                list-style-type: none;
            }


            .items li a {
                text-decoration: none;
                color: white;
                display: inline-block;
                text-align: center;
                padding: 10px 14px;
            }

            .items .dropdown-content {
                display: none;
                position: absolute;
                background: rgb(58, 57, 57);
                min-width: 130px;
                box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            }

            .items li a:hover, .dropdown:hover, .dropdown-content a:hover {
                background-color: rgb(82, 4, 4);
            }

            .items .dropdown-content a {
                color: white;
                padding: 12px 14px;
                text-decoration: none;
                display: block;
                text-align: left;
            }

                .items .dropdown-content a:hover {
                    background: rgb(136, 20, 20);
                }

            .items .dropdown:hover .dropdown-content {
                display: block;
            }

            .items .dropdown {
                display: inline-block;
            }

    </style>
</head>
<body>



<header>
    <nav class="navbar">
        <p>Valorant Datahub</p>
        <div class="items">
            <ul>
                <li><a href="/Adminhome/Index">Home</a></li>
                <li><a href="#" onclick="OpenAgents()">Agents</a></li>
                <li><a href="#">Maps</a></li>
                <li><a href="/AdminData/Index?option=Weaponary">Weapons</a></li>
                <li><a href="/AdminData/Index?option=Player">Users</a></li>
                <li><a href="#">Locations</a></li>
                <li><a href="#">Teams</a></li>
                <li class="dropdown">
                    <a href="#" class="dropbtn">Matches</a>
                    <div class="dropdown-content">
                        <a href="#" onclick="OpenSoloMatches()">Solo Matches</a>
                        <a href="#">Team Matches</a>
                    </div>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropbtn">Admin</a>
                    <div class="dropdown-content">
                        <a href="#">Home</a>
                        <a href="#">Logout</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
</header>
<script>
    function Logout() {
        var dropdown = document.getElementById("mydropdown");
        var selectedValue = dropdown.value;
        if (selectedValue === "Logout") {
            window.location.href = "homepage.html";
        }
    }
    function OpenAgents() {
        window.location.href = "/AdminData/Index?option=agents";
    }
    function OpenSoloMatches() {
            window.location.href = "/AdminData/Index?option=" + encodeURIComponent("solo_Matches");
    }
    </script>
        </body>
